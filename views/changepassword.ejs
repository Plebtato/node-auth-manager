<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-person-booth"></i> Change Password</h1>
        <form action="/users/changepassword" method="POST">
            <div class="form-group">
                <label for="password">New Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Create Password"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
            </div>
            <hr>
            <div class="form-group">
                <label for="password2">Confirm New Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  placeholder="Confirm Password"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
            </div>
          <hr>
          <%- include ("./partials/messages"); %>
          <button type="submit" class="btn btn-primary col-12 mb-2">Submit</button>
        </form>
        <a href="/dashboard" class="btn btn-secondary btn-block mb-2">Back</a>
      </div>
    </div>
  </div>